<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Home Page"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Simple Buttons -->
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="16dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnCreateRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Request"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="16dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnViewOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Others Requests"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="16dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnViewMyRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View My Requests"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0097A7"
            android:layout_marginBottom="24dp"
            android:padding="14dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C62828"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
