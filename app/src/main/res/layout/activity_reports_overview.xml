<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FAFAFA">

    <!-- Logo Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports Page"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnReportedRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reported Requests"
        android:backgroundTint="#159CB5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnReportedUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reported Users"
        android:backgroundTint="#159CB5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnReportedComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reported Comments"
        android:backgroundTint="#159CB5"
        android:textColor="#FFFFFF"/>
</LinearLayout>
